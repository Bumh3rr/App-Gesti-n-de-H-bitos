<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Card con Progress -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="420dp"
                app:cardCornerRadius="36dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#84A98C">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">

                    <!-- Top Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/btnProfile"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/los_h_bitos_de_hoy"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"/>

                        <ImageButton
                            android:id="@+id/btnSettings"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_settings"
                            android:background="@drawable/bg_header_button"
                            app:tint="@color/white"/>
                    </LinearLayout>

                    <!-- Progress Circle -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progressCircleMain"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            app:indicatorSize="160dp"
                            app:trackThickness="8dp"
                            app:indicatorColor="@color/white"
                            app:trackColor="#80FFFFFF"
                            app:trackCornerRadius="4dp"
                            android:progress="100"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/tvProgressMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4/4"
                                android:textSize="36sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/terminado"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:alpha="0.8"
                                android:fontFamily="@font/poppins_regular"/>
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Message -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="16dp"
                        android:paddingHorizontal="24dp">

                        <TextView
                            android:id="@+id/tvMotivation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/incre_ble_progreso"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_bold"/>

                        <TextView
                            android:id="@+id/tvMotivationDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/todos_los_h_bitos_completados_hoy"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:alpha="0.8"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- FAB Overlay -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|center">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_add"
                        app:tint="@color/white"
                        app:backgroundTint="#2C3E50"
                        app:fabSize="normal"
                        app:elevation="8dp"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Habits List Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:paddingTop="40dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mis_h_bitos"
                        android:textSize="20sp"
                        android:textColor="@color/text_light"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>

                <!-- Habits RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHabits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/llEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingVertical="60dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_spa"
                        app:tint="@color/text_secondary_light"
                        android:alpha="0.3"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aún no hay hábitos"
                        android:textSize="20sp"
                        android:textColor="@color/text_light"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toca + para crear tu primer hábito"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary_light"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>