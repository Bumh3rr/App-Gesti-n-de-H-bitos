<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardHabit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/surface_light"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon Circle -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9">

            <ImageView
                android:id="@+id/ivHabitIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_spa"
                android:layout_gravity="center"
                app:tint="#4CAF50"/>
        </androidx.cardview.widget.CardView>

        <!-- Habit Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvHabitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning Run"
                android:textSize="16sp"
                android:textColor="@color/text_light"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 kilometers"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Check Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            app:fabCustomSize="32dp"
            app:maxImageSize="16dp"
            app:tint="@color/white"
            app:backgroundTint="#84A98C"
            app:elevation="0dp"
            app:borderWidth="0dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>